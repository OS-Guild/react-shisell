{
    "compilerOptions": {
        "target": "es5",
        "skipLibCheck": true,
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "rootDir": "src",
        "jsx" : "react",
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "src/**/*",
        "types/*"
    ],
    "exclude": [
        "**/*.spec.tsx",
        "dist",
        "node_modules"
    ]
}